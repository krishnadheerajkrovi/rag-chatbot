# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/rag_chatbot

# Ollama Configuration (using local Mac Ollama)
# Use host.docker.internal to access host machine from Docker
OLLAMA_BASE_URL=http://host.docker.internal:11434
DEFAULT_MODEL=llama2

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# API Configuration
API_BASE_URL=http://localhost:8000

# Vector Store
VECTOR_STORE_PATH=/app/vector_store

# Phoenix Configuration (Arize Phoenix for tracing)
# Set to true to enable Phoenix tracing
PHOENIX_ENABLED=true
# Phoenix collector endpoint (run: docker run -p 6006:6006 -p 4317:4317 arizephoenix/phoenix:latest)
PHOENIX_COLLECTOR_ENDPOINT=http://host.docker.internal:6006
# Project name for organizing traces
PHOENIX_PROJECT_NAME=rag-chatbot
